<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blob Beats</title>
    <style>
        @font-face {
            font-family: 'Pixelated';
            src: url('https://your-font-url.com/pixel-font.woff2') format('woff2');
        }

        body {
            font-family: 'Pixelated', Arial, sans-serif;
            background: #c0c0c0;
            color: black;
            text-align: center;
        }

        .window {
            width: 600px;
            height: 640px;
            margin: 50px auto;
            border: 3px solid black;
            background: #e0e0e0;
            box-shadow: 5px 5px black;
            display: flex;
            flex-direction: column; 
        }

        .title-bar {
            background: #000080;
            color: white;
            padding: 5px;
            text-align: left;
            font-weight: bold;
        }

        .content {
            padding: 15px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            gap: 15px; 
        }

        .playlist-container {
            flex-grow: 1;
            overflow-y: auto;
            max-height: 440px;
            border: 2px solid black;
            background: white;
        }

        .playlist {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .playlist li {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background: white;
            border-bottom: 2px solid black;
            margin: 5px 0;
            padding: 10px;
            cursor: pointer;
            font-size: 14px;
        }

        .playlist li:hover {
            background: #d3d3d3;
        }

        .album-art {
            width: 40px;
            height: 40px;
            background: grey;
            border: 2px solid black;
            margin-left: 10px;
        }

        .controls {
            display: flex;
            justify-content: center;
            gap: 5px;
            margin-bottom: 15px;
        }

        .btn {
            background: white;
            border: 2px solid black;
            padding: 5px;
            cursor: pointer;
        }
        
        .btn:hover {
            background: #d3d3d3;
        }

        .audio-controls {
            display: flex; 
            justify-content: center;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="window">
        <div class="title-bar" id="nowPlaying">üéµ Blob Beats </div>
        <div class="content">
            <audio id="audioPlayer" controls class="audio-controls"></audio>
            <div class="controls">
                <button class="btn" onclick="prevSong()">‚èÆÔ∏è Previous</button>
                <button class="btn" onclick="toggleShuffle()">üîÄ Shuffle</button>
                <button class="btn" onclick="toggleRepeat()">üîÅ Repeat</button>
                <button class="btn" onclick="nextSong()">‚è≠Ô∏è Next</button>
            </div>
            <div class="playlist-container">
                <ul class="playlist" id="playlist">
                    <li onclick="playSong(0)">üéµ Zion (Prod. Kaze) <div class="album-art"></div></li>
                    <li onclick="playSong(1)">üéµ Witcher (Prod. Kaze) <div class="album-art"></div></li>
                    <li onclick="playSong(2)">üéµ Shibuya (Prod. Kaze) <div class="album-art"></div></li>
                    <li onclick="playSong(3)">üéµ Trophies (Prod. Kaze) <div class="album-art"></div></li>
                    <li onclick="playSong(4)">üéµ Threes and Sixes (Prod. Kaze) <div class="album-art"></div></li>
                    <li onclick="playSong(5)">üéµ Firefly (Prod. Kaze) <div class="album-art"></div></li>
                    <li onclick="playSong(6)">üéµ Deep End (Prod. Kaze) <div class="album-art"></div></li>
                    <li onclick="playSong(7)">üéµ Halo (Prod. Kaze) <div class="album-art"></div></li>
                    <li onclick="playSong(8)">üéµ Heartache (Prod. Kaze) <div class="album-art"></div></li>
                    <li onclick="playSong(9)">üéµ Kojo (Prod. Kaze) <div class="album-art"></div></li>
                    <li onclick="playSong(10)">üéµ Love Hate (Prod. Kaze) <div class="album-art"></div></li>
                    <li onclick="playSong(11)">üéµ Roxanne (Prod. Kaze) <div class="album-art"></div></li>
                    <li onclick="playSong(12)">üéµ Grove St (Prod. Kaze) <div class="album-art"></div></li>
                    <li onclick="playSong(13)">üéµ Finale (Prod. Kaze & Rondavinci) <div class="album-art"></div></li>
                    <li onclick="playSong(14)">üéµ Dream Sequence (Prod. Kaze) <div class="album-art"></div></li>
                    <li onclick="playSong(15)">üéµ Colder Nights (Prod. Kaze) <div class="album-art"></div></li>
                    <li onclick="playSong(16)">üéµ Astro (Prod. Kaze) <div class="album-art"></div></li>
                    <li onclick="playSong(17)">üéµ Xenon (Prod. Kaze) <div class="album-art"></div></li>
                </ul>
            </div>
        </div>
    </div>

    <script>
document.addEventListener("DOMContentLoaded", function() {
        const player = document.getElementById('audioPlayer');
        const nowPlaying = document.getElementById('nowPlaying');
        const playlistItems = document.querySelectorAll('.playlist li');
        let currentIndex = 0;
        let shuffleMode = false;
        let repeatMode = "all";

// move 'songs' array before playSong
        const songs = [
            "https://aggregator.walrus-testnet.walrus.space/v1/blobs/_wfEwCdEuIHasQ_XAtmoU0dpPYoFTNjJsHLZnmDfCWE",
            "https://aggregator.walrus-testnet.walrus.space/v1/blobs/GzjCgR0V5lPHWj37VSV25NbNXoUh0uzkPSWtiR-Y8CU",
            "https://aggregator.walrus-testnet.walrus.space/v1/blobs/H3pOGpuQiLCXyOXCCoDUsCDg08wVLQtejeshblIY5OE",
            "https://aggregator.walrus-testnet.walrus.space/v1/blobs/8TMNXyj7ijd4CqvLkJpyTH1zHVjA3IOg6wJ01d4QSo8",
            "https://aggregator.walrus-testnet.walrus.space/v1/blobs/by11RgsmdcJZOuF-RrZwuUWwidNqUJeamgIELkJHTeo",
            "https://aggregator.walrus-testnet.walrus.space/v1/blobs/Ee8OGo-fx9IpKXMs6KrzbUu51Q3NjWSwTXU81pYia1o",
            "https://aggregator.walrus-testnet.walrus.space/v1/blobs/Yoj5O3VOrQ3eTwPriahIpTk5OiyxvejPeXHOlpw_W8s",
            "https://aggregator.walrus-testnet.walrus.space/v1/blobs/cV4-BMk6K6kMqUBVEocwZnjMZ0NgU2EZA2mZfHIrUiA",
            "https://aggregator.walrus-testnet.walrus.space/v1/blobs/VU-TIyOCspN7bmmrDT4X_EBVqfgBzcSBoigZeaHdLd0",
            "https://aggregator.walrus-testnet.walrus.space/v1/blobs/aq2kMEi05HCdlAEkacuq7tdDeX8TbvNxQM9W8nuFHNg",
            "https://aggregator.walrus-testnet.walrus.space/v1/blobs/ceT0Ij8zUY7kxRC5528kK_fFOvkjBPIYJQhtBo0yrj0",
            "https://aggregator.walrus-testnet.walrus.space/v1/blobs/H9i9ovGD4Lq9z3DhZ6Xak2W41KPt7XK2kMkyBk3Vufw",
            "https://aggregator.walrus-testnet.walrus.space/v1/blobs/OVeUQSdNZg7HgwaXFwgpJF591QljY-xb5jCfv13gGrE",
            "https://aggregator.walrus-testnet.walrus.space/v1/blobs/hK8_Q9FQiSZUelN7_7ZwrlM50CbrNsbgFnX_wsGaHso",
            "https://aggregator.walrus-testnet.walrus.space/v1/blobs/CjMlnYWLj5HW0gDT6psIxE_u1e4GlYcT4AhiOiiqg_4",
            "https://aggregator.walrus-testnet.walrus.space/v1/blobs/HwHFVQovTshfqbFh2vc0xm-uSimrz6DjRGALOoeFECM",
            "https://aggregator.walrus-testnet.walrus.space/v1/blobs/crqedRYECa3Mcm2raKM4joJqN50xJEIbPnhPe29_Il4",
            "https://aggregator.walrus-testnet.walrus.space/v1/blobs/bTlTlpfnTZv539WxRSQRelGc04iLlEu8ogH8p3lWi1o"
        ]

        window.playSong = function(index) {
            currentIndex = index;
            player.src = songs[currentIndex];
            player.play();

            // Update now playing title
            nowPlaying.textContent = üéµ Now Playing: ${playlistItems[currentIndex].textContent.trim()}`;
        };
     });

        function nextSong() {
            if (shuffleMode) {
                playSong(Math.floor(Math.random() * songs.length));
            } else {
                if (repeatMode === "one") {
                playSong((currentIndex + 1) % songs.length);
            } else if (currentIndex + 1 < songs.length) {
                playSong(currentIndex + 1);
            }
        }
    }

        function prevSong() {
            playSong(currentIndex > 0 ? currentIndex - 1 : songs.length - 1);
        }

        function toggleShuffle() {
            shuffleMode = !shuffleMode;
        }

        function toggleRepeat() {
            repeatMode = repeatMode === "all" ? "one" : repeatMode === "one" ? "off" : "all";
        }
    </script>
</body>
</html>
